									<ColumnDefinition Width="2*"/>
								</Grid.ColumnDefinitions>
								<StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
									<Label Tag="WarningLabel" VerticalAlignment="Center" Foreground="{Binding WarnBrush}" FontSize="14" FontStyle="Italic" Content="{Binding WarningText}"/>
								</StackPanel>
								<StackPanel Grid.Row="0" Grid.Column="1">
									<Button Width="100" Height="25" HorizontalAlignment="Center" Margin="0,20" Background="Beige" IsEnabled="{Binding CanRun}" Click="RunButton_Click" Content="{Binding RunLabel}" Tag="F_"/>
								</StackPanel>
								<StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4">
									<ProgressBar Width="600" Height="25" HorizontalAlignment="Center" Minimum="0" Maximum="{Binding ProgressMax}" Value="{Binding Progress}"/>
								</StackPanel>
							</Grid>
							<Label Content="{Binding VersionString}" HorizontalAlignment="Right" FontStyle="Italic" Margin="10,30" FontWeight="Thin"/>
						</StackPanel>
					</Grid>
				</Grid>
