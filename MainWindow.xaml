								<Button Width="20" Height="20" HorizontalAlignment="Center" Margin="-15,0,10,0" Background="Beige" Click="MultiSource_Click" Content="..."/>
								<TextBox x:Name="P_Source" Width="300" Height="20" HorizontalAlignment="Center" BorderBrush="#FF333333" BorderThickness="1" TextChanged="TextboxUpdated"/>
							</StackPanel>
							<Label FontFamily="Arial" FontSize="14" Width="300" Height="26" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="15,20,0,0" Content="Path to Destination Log Directory"/>
							<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
								<Button Width="20" Height="20" HorizontalAlignment="Center" Margin="-15,0,10,0" Background="Beige" Click="MultiDest_Click" Content="..."/>
								<TextBox x:Name="P_Output" Width="300" Height="20" HorizontalAlignment="Center" BorderBrush="#FF333333" BorderThickness="1" TextChanged="TextboxUpdated"/>
							</StackPanel>
							<Label x:Name="P_SearchLabel" FontFamily="Arial" FontSize="14" Width="300" Height="26" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="15,20,0,0" Content="Target Word or Phrase"/>
							<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
								<CheckBox x:Name="RegexCheckBox" Width="16" Height="16" HorizontalAlignment="Center" Margin="-12,0,10,0" Background="Beige" Checked="TextboxUpdated" Unchecked="TextboxUpdated" IsChecked="False"/>
								<TextBox x:Name="P_Search" Width="300" Height="20" HorizontalAlignment="Center" Margin="2,0,0,0" BorderBrush="#FF333333" BorderThickness="1" TextChanged="TextboxUpdated"/>
